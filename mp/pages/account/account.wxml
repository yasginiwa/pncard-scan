<view class="header">
  <image src="../../assets/account_banner.png" mode="widthFix"></image>
  <view class="description">刮开密码涂层，输入卡号密码查询</view>
  <van-cell-group></van-cell-group>
  <van-field
    value="{{ username }}"
    required
    clearable
    label="卡号"
    icon="question-o"
    placeholder="请输入卡号"
  />

  <van-field
    value="{{ password }}"
    type="password"
    label="密码"
    placeholder="请输入密码"
    required
    border="{{ false }}"
  />
</view>
<view class="main">
  <button type="plain" size="normal" bindtap="handleScanQRCode">查询余额</button>
</view>