page {
  background-color: #ecf0f1;
}

.header {
  width: 100%;
  height: 30vh;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
}

.header image {
  width: 80%;
  transform: translateY(60rpx);
}

.header .description {
  letter-spacing: 5rpx;
  color: #5f5d5d;
  transform: translateY(100rpx);
}

.main {
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
  height: 50vh;

}

.main .input{
  width: 80%;
  border-radius: 10rpx;
  overflow: hidden;
}

.main button {
  background-color: #f3c516;
  border-radius: 10rpx;
  height: 90rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  transform: translateY(-80rpx);
}