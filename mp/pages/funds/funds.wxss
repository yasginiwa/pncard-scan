/* pages/funds/funds.wxss */
page {
  background-color: #ecf0f1;
}

.main {
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
  width: 100%;
  height: 60vh;
}

.funds-icon {
}

.funds-icon image {
  width: 220rpx;
}

.funds-show {
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
  height: 120rpx;
}

.funds-show text:nth-child(1) {
  color: #8a8a8a;
  font-size: 34rpx;
}

.funds-show text:nth-child(2) {
  font-size: 40rpx;
}

.funds-thanks {
  
}

.funds-thanks button {
  background-color: #f3c516;
  color: #fff;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}